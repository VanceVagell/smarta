<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    android:keepScreenOn="true"
    tools:context="com.vagell.smartatablet.TrainingActivity">

    <FrameLayout
        android:id="@+id/training_mode_all_red"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#ff000000"
        android:visibility="invisible"></FrameLayout>

    <FrameLayout
        android:id="@+id/training_mode_large_red_box"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#ff000000"
        android:visibility="invisible"></FrameLayout>

    <FrameLayout
        android:id="@+id/training_mode_small_red_box"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#ff000000"
        android:visibility="invisible"></FrameLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/testing_dividers"
        android:id="@+id/training_mode_red_and_gray_boxes"
        android:columnCount="3"
        android:rowCount="1"
        android:visibility="invisible">

        <RelativeLayout
            android:id="@+id/training_left_container"
            android:layout_width="150dp"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/training_left_color_block"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#ff000000"></FrameLayout>
        </RelativeLayout>


        <!-- Border -->
        <FrameLayout
            android:id="@+id/training_middle_border"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"></FrameLayout>

        <RelativeLayout
            android:id="@+id/training_right_container"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/training_left_color_block"
            android:layout_alignParentBottom="true">

            <FrameLayout
                android:id="@+id/training_right_color_block"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#ff000000"></FrameLayout>
        </RelativeLayout>
    </GridLayout>

    <SurfaceView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/training_camera_view"
        android:alpha="0"/>

</RelativeLayout>
